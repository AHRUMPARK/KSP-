<div class="outline_line mypage container">

    <div class="mypage item1">
        <h1>마이 페이지</h1>
    </div>
    <!-- <div class="center"> -->

    <div class="mypage item2">
        <form class="mypage Information" id="profile_info">
            <!-- 유저 닉네임, 사진 -->
            <div>
                <div class="nickname">
                    <%=data.name%>
                </div>
                <div class="user_poto"><img id="profile_img" src="../static/profile_img/<%= data.user_img %>"></div>
                <!-- 프로필 변경 버튼 -->
                <label type="text" aria-label="Search">
                    <input type="file" name="img" style="display:none;" id="userfile">
                </label>
                <button type="button" class="btn btn-primary btn-sm" id="upload_file">프로필 변경</button>


        </form>
    </div>

</div>


<!-- 좋아요 -->
<div class="mypage item3">

    <p style="display: inline;">Like list</p>
    <img id="item3_heart" src="../static/res/image/full_heart.png">
    <p>나의 좋아요 리스트</p>
    <div class="love_img" id="love_img">
        <% for( var i=0; i <=3; i ++ ) { %>
            <a href="#" onclick="like_modal()"><img src="<%=result.likesing[i].album_img%>"></a>
            <% } %>
                <!-- 좋아요 리스트 모달 -->
                <!-- Modal -->

                <div class="modal fade d-none" id="like_modal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="like_modal"> 좋아요 리스트</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="list_info">
                                    <% for (var i=0; i < result.likesing.length; i ++ ) { %>
                                        <li><img src="<%=result.likesing[i].album_img%>">
                                            <span>
                                                <%=result.likesing[i].singer%>
                                            </span>
                                            <span>
                                                <%=result.likesing[i].title%>
                                            </span>
                                            <span><img style="width: 30px; height: 30px;" class="like_btn" src="../static/res/image/full_heart.png"></span>
                                        </li>
                                        <% } %>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

    </div>

    <!-- 내 게시글 -->
    <div class="mypage item4">
        <p>My post</p>
        <p>나의 게시글</p>
        <div class="list-group">
            <% for(var i=0; i < result.Board.length ; i++) { %>
                <a href="/board/read?number=<%=result.Board[i].number%>" class="list-group-item list-group-item-action">
                    <span><%=result.Board[i].title%></span>
                    <span><%=result.Board[i].date%></span>
                </a>
            <% } %>
        </div>
    </div>
</div>